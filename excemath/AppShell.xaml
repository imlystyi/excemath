<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="excemath.AppShell"
       x:DataType="ContentPage"
    
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:mct="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
       xmlns:views="clr-namespace:excemath.Views"
    
       FlyoutBehavior="Disabled"
    
       Shell.TabBarBackgroundColor="#F2F2F2"
       Shell.BackgroundColor="{StaticResource PageBackground}"
       Shell.TitleColor="Black"
       Shell.NavBarIsVisible="False"
       Shell.TabBarTitleColor="Black"
       Shell.TabBarUnselectedColor="Gray">

    <Shell.Behaviors>
        <mct:StatusBarBehavior StatusBarColor="#F2F2F2" StatusBarStyle="DarkContent"/>
    </Shell.Behaviors>

    <TabBar>
        <ShellContent Icon="mainpage_icon.svg"
                      Title="Головне меню"
                      ContentTemplate="{DataTemplate views:MainMenuPage}"
                      Route="MainMenuPage"/>

        <ShellContent Icon="achievements_icon.svg"
                      Title="Досягнення"
                      ContentTemplate="{DataTemplate views:AchievementsPage}"
                      Route="AchievementsPage"/>

        <ShellContent Icon="settings_icon.svg"
                      Title="Налаштування"
                      ContentTemplate="{DataTemplate views:SettingsPage}"
                      Route="SettingsPage"/>
    </TabBar>
    
</Shell>
