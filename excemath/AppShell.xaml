<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="excemath.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:excemath"
    Shell.FlyoutBehavior="Disabled"
    
    >
    

    <TabBar>
        <Tab Title="Режими">
          <ShellContent
          Title="Excemath"
          ContentTemplate="{DataTemplate local:MainPage}"
          Route="MainPage" />
        </Tab>

        <Tab Title="Досягнення">
          <ShellContent
          ContentTemplate="{DataTemplate local:AchievementPage}"
          Route="NewPage" />
        </Tab>

        <Tab Title="Налаштування">
          <ShellContent
           ContentTemplate="{DataTemplate local:SettingPage}"
           Route="NewPage" />
        </Tab>
    </TabBar>

</Shell>
