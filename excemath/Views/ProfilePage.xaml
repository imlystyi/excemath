<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="excemath.Views.ProfilePage"
             Title="ProfilePage">
    <VerticalStackLayout Spacing="20">
        <Label Style="{StaticResource TitleLabel}" Text="Досягнення" Padding="0,0,50,0" VerticalOptions="Center" FontSize="30"/>

       
        <Frame BackgroundColor="#D3DFFF" CornerRadius="20" Margin="20,0,20,5" HeightRequest="70" WidthRequest="290" BorderColor="White">
            <Frame.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="#CFDDFF" Offset="0.1"/>
                    <GradientStop Color="#EAF0FF" Offset="1.0"/>
                </LinearGradientBrush>
            </Frame.Background>

            <Label Style="{StaticResource DetailsLabelLight}" Text="Кориcтувач" VerticalOptions="Center" HorizontalOptions="Center" FontSize="20"/>
        </Frame>

        <Frame BackgroundColor="#D3DFFF" CornerRadius="20" Margin="20,0,20,5" HeightRequest="300" WidthRequest="400"  BorderColor="White">
            <Frame.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="#CFDDFF" Offset="0.1"/>
                    <GradientStop Color="#EAF0FF" Offset="1.0"/>
                </LinearGradientBrush>
            </Frame.Background>

            <VerticalStackLayout Spacing="40" VerticalOptions="Center" HorizontalOptions="Start">
                <Label Style="{StaticResource DetailsLabelLight}" Text="Загальна кількість завдань" FontSize="20" />
                <Label Style="{StaticResource DetailsLabelLight}" Text="Кількість правильних відповідей" FontSize="20" />
                <Label Style="{StaticResource DetailsLabelLight}" Text="Кількість неправильних відповідей" FontSize="20"/>
            </VerticalStackLayout>
        </Frame>

        <Frame BackgroundColor="#D3DFFF" CornerRadius="20" HeightRequest="70" WidthRequest="400" BorderColor="White" HorizontalOptions="Center" Margin="0,130,0,0">
            <Frame.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="#CFDDFF" Offset="0.1"/>
                    <GradientStop Color="#EAF0FF" Offset="1.0"/>
                </LinearGradientBrush>
            </Frame.Background>

            <Label Style="{StaticResource DetailsLabelLight}" Text="Змінити пароль" VerticalOptions="Center" HorizontalOptions="Center" FontSize="20"/>
        </Frame>

        <Frame BackgroundColor="#D3DFFF" CornerRadius="20"  HeightRequest="70" WidthRequest="400" BorderColor="White" HorizontalOptions="Center">
            <Frame.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="#CFDDFF" Offset="0.1"/>
                    <GradientStop Color="#EAF0FF" Offset="1.0"/>
                </LinearGradientBrush>
            </Frame.Background>

            <Label Style="{StaticResource DetailsLabelLight}" Text="Скинути досягнення" VerticalOptions="Center" HorizontalOptions="Center" FontSize="20"/>
        </Frame>

    </VerticalStackLayout>
</ContentPage>