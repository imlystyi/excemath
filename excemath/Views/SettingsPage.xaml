<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="excemath.Views.SettingsPage"
             Title="Налаштування">

    <VerticalStackLayout Margin="3" Padding="20" Spacing="30" VerticalOptions="Start">
        <Border Margin="-50,-10,-50,0" HorizontalOptions="Fill" BackgroundColor="#1C1C21">
            <Label
               TextColor="#EAECEE"
               HorizontalOptions="Center"
               Text="Налаштування"
               FontSize="25"
               FontAttributes="Bold"/>
        </Border>

        <Button Style="{StaticResource MainMenuButton}"
                Text="Скинути досягнення"/>
        <Button Style="{StaticResource MainMenuButton}"
                Text="Про програму"/>
    </VerticalStackLayout>

</ContentPage>