<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="excemath.Views.SettingsPage"
              x:DataType="VerticalStackLayout"
     
             Title="Налаштування">

    <VerticalStackLayout  Spacing="30" VerticalOptions="Start">
        <Border Margin="-10,-16,-10,0" StrokeShape="{RoundRectangle CornerRadius=0}" HeightRequest="100" 
                BackgroundColor="#F2F2F2" >

            <Label Margin="40,0,0,0"
               VerticalOptions="Center"
               Text="Налаштування"
               TextColor="Black"
               Grid.Column="0"
               FontSize="30"
               FontAttributes="Bold"/>

        </Border>

        <HorizontalStackLayout>
            <Image Source="reset_achievem_icon.svg" Margin="20"/>
            <Button Style="{StaticResource SettingsButton}"
                    Text="Скинути досягнення"/>

        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Image Source="about_program_icon.svg" Margin="20"/>
            <Button Style="{StaticResource SettingsButton}"
                Text="Про програму"/>
        </HorizontalStackLayout>

    </VerticalStackLayout>

</ContentPage>